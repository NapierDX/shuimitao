/* pages/my.wxss */
page{
    background: #F0F0F0;
}

.name-box{
    width: 700rpx;
    height: 200rpx;
    position: relative;
    margin-top: 20rpx;
    left: 25rpx;
    background: white;
    border-radius: 16rpx;
}

.avatar{
    border-radius: 50%;
    width: 120rpx;
    height:120rpx;
    background: grey;
    position: absolute;
    top: 40rpx;
    left: 40rpx;
}

.name{
    font-size: 32rpx;
    font-weight: bold;
    text-align: left;
    width: 500rpx;
	color:rgba(25,22,22,1);
    overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
    position: absolute;
    top: 70rpx;
    left: 200rpx;
}

.list-box{
    width: 700rpx;
    position: relative;
    margin-top: 20rpx;
    left: 25rpx;
    background: white;
    border-radius: 16rpx;
}
.line{
    width:700rpx;
    height: 120rpx;
    position: relative;
    left: 0rpx;
}
.line-box{
    width: 550rpx;
    height: 120rpx;
    position: absolute;
    right: 0;
    top: 0;
    border-bottom: 2rpx solid rgba(150,150,150,0.3);
    font-size: 30rpx;
    font-weight: 400;
    line-height: 120rpx;
    color:rgba(25,22,22,0.6);
    padding-left: 30rpx;
    overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.line-img{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 35rpx;
    top: 20rpx;
    background: grey;
}

