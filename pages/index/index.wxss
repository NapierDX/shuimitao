/**index.wxss**/
page{
  background: #eeeeee;
}

.top-banner{
  height: 300rpx;
  width: 750rpx;
  position: relative;
  background: #ffffff;
}

.banner{
  height: 300rpx;
  width: 750rpx;
}

.scroll{
  width: 750rpx;
  margin-top: 10rpx;
  position: relative;
}

.scroll-box{
  width: 750rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.good-box{
  width: 370rpx;
  height: 470rpx;
  margin-top: 5rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.good-name-box{
  background: white;
	width: 370rpx;
	height: 100rpx;
  border-radius: 0 0 16rpx 16rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.good-name{
	width: 300rpx;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
  position: relative;
}
.good-name-text{
	width: 300rpx;
	min-height: 50rpx;
	line-height: 50rpx;
	font-size:24rpx;
	font-weight:400;
	color:rgba(25,22,22,1);
	text-align: left;
	position: relative;
	display: -webkit-box;
	text-overflow: ellipsis;
	overflow: hidden;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.good-price{
  width: 70rpx;
  text-align: center;
  height: 100rpx;
  position: relative;
  line-height: 100rpx;
  font-size:24rpx;
	font-weight:400;
	color:rgba(25,22,22,1);
}